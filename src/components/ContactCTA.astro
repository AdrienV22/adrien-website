---
import CallToAction from './CallToAction.astro';
import Icon from './Icon.astro';
---

<aside>
	<h2>Vous souhaitez me contacter ? <Icon icon='contact-logo'/></h2>
	<CallToAction href="mailto:adrien.valo@outlook.fr">
		Me contacter par mail
		<Icon icon="paper-plane-tilt" size="1.2em" />
	</CallToAction>
</aside>

<style>
aside {
	display: flex;
	flex-direction: column;
	align-items: center;
	gap: 3rem;

	padding: 5rem 1.5rem;
	border-top: 1px solid hsla(var(--gray-999-basis), 0.08);
	border-bottom: 1px solid hsla(var(--gray-999-basis), 0.08);

	/* Fond légèrement translucide et doux */
	background: linear-gradient(
		180deg,
		hsla(var(--gray-999-basis), 0.5),
		hsla(var(--gray-999-basis), 0.3)
	);
	backdrop-filter: blur(6px);

	/* Ombre premium */
	box-shadow: 0 4px 15px rgba(0, 0, 0, 0.06);
	border-radius: 1rem;
}


	h2 {
		font-size: var(--text-xl);
		text-align: center;
		max-width: 15ch;
	}

	@media (min-width: 50em) {
		aside {
			padding: 7.5rem;
			flex-direction: row;
			flex-wrap: wrap;
			justify-content: space-between;
		}

		h2 {
			font-size: var(--text-3xl);
			text-align: left;
		}
	}
</style>
